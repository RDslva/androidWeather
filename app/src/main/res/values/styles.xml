<resources>
    <!-- Base application theme. -->
    <style name="DayNight" parent="Theme.AppCompat.DayNight.NoActionBar">

        <!-- Customize your theme here. -->
        <!-- Set colours -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Light" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <!-- Set colours -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Set colours -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NordTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Set colours -->
        <item name="android:statusBarColor">@color/transparent</item>

        <item name="android:colorBackground">@color/nordBackground</item>
        <item name="colorPrimary">@color/nordColorPrimary</item>
        <item name="colorPrimaryDark">@color/nordColorPrimaryDark</item>
        <item name="colorAccent">@color/nordColorSecondary</item>
        <item name="colorControlNormal">@color/nordNormal</item>
        <item name="android:textColorPrimary">@color/nordTextPrimary</item>
        <item name="android:textColorSecondary">@color/nordTextSecondary</item>
    </style>

</resources>
